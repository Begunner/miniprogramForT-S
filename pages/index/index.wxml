<l-capsule-bar  title="作业提交助手"
			          status-bar-color="rgb(242, 242, 242)"
				        title-bar-color="rgb(242, 242, 242)"
                home-page="/pages/index/index">
</l-capsule-bar>

<view class="container">
  <view class="userinfo">
    <block wx:if="{{!hasUserInfo}}">
      <button wx:if="{{canIUseGetUserProfile}}" bindtap="getUserProfile"> 登录 </button>
    </block>
    <block wx:else>
      <image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
      <text class="userinfo-nickname">{{username}}</text>
    </block>
  </view>
</view>
<view wx:if="{{hasUserInfo}}">
  <!--选择身份-->
  <button class="bigButton" bindtap="goToStu">我是学生</button>
  <button class="bigButton" bindtap="goToTea">我是老师</button>
</view>
